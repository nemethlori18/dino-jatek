<body>
    <div id="gameArea">
        <span id="dino">ü¶ñ</span>
    </div>
    <button id="jumpButton">Ugr√°s</button>

    <script>
        let dino = document.getElementById("dino");
        let isJumping = false;

        document.getElementById("jumpButton").addEventListener("click", function() {
            if (!isJumping) {
                isJumping = true;
                let up = setInterval(() => {
                    let bottom = parseInt(window.getComputedStyle(dino).bottom);
                    if (bottom < 80) {
                        dino.style.bottom = bottom + 5 + "px";
                    } else {
                        clearInterval(up);
                        let down = setInterval(() => {
                            let bottom = parseInt(window.getComputedStyle(dino).bottom);
                            if (bottom > 0) {
                                dino.style.bottom = bottom - 5 + "px";
                            } else {
                                clearInterval(down);
                                isJumping = false;
                            }
                        }, 20);
                    }
                }, 20);
            }
        });
    </script>
</body>
